use YAML;
use strict;

my $yamlfile = shift || die "usage: $0 yamlfile";
my $data = YAML::LoadFile($yamlfile) or die "Can't parse data in $yamlfile";
print join("\n",
	   map {
	       "$_->{name}\t$_->{cat} $_->{coords}[0]";
	   } @$data
	  );
print "\n";

__END__
