Required debian modules
------------------------------------

sudo apt-get install \
  pbzip2 bzip2 xz-utils git-core screen lynx curl wget time \
  lsof whois pigz make acct telnet dnsutils bc sysstat \
  buffer pktstat emacs unzip vim gcc zlib1g-dev perltidy tidy \
  bsd-mailx mutt perl-doc zip sudo munin-node htop strace \
  python openjdk-6-jdk g++ sockstat \
  libhtml-tagcloud-perl libtext-unidecode-perl munin \
  libxml-atom-simplefeed-perl libjson-perl liburi-perl \
  libxml-libxml-perl libyaml-perl libyaml-syck-perl libxml-simple-perl \
  libdevel-size-perl libtie-ixhash-perl libdevel-size-perl \
  libbsd-resource-perl libobject-realize-later-perl libemail-valid-perl \
  libcairo-perl libpango-perl libinline-perl libpdf-create-perl \
  libgd-gd2-perl pdftk \
  libprotobuf-lite6 libshp1 libgeos-dev libxml2-dev 

# perl devel libs?
