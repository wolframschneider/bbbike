	echo ${OSM_AREAS} " " | \
	  ${PERL} -ne 'chomp; foreach (split) { print qq{PATH=\$$PATH:`pwd`/world/bin world/bin/osm2suggestions ../osm/download/$$_ '${OSM_AREAS_OPENSEARCH}'/$$_\0} }' | \
	  ${GXARGS} -0 -n1 -P${MAX_CPU2} sh -c

