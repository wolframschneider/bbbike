#!/bin/sh
# Copyright (c) 2009-2014 Wolfram Schneider, http://bbbike.org
#
# bbbike-tarball - create $HOME/src/bbbike.tgz tarball

set -e
: ${bbbike_src=$HOME/src/bbbike.tgz}

dirname=`dirname $0`
case $dirname in 
  /* ) ;;
   * ) dirname=$(pwd)/$dirname;;
esac

gzip=`which pigz gzip | head -n 1`

dir=$(mktemp -d -t bbbike-tarball.XXXXXXXX)
cd $dir

error () {
   message="$@"
   echo $message
   exit 2
}

env bbbike_fast_checkout="false" $dirname/bbbike-checkout >&2 || error "checkout failed: $dir"

make -C./bbbike -s update-files || error "update-files"
make -C./bbbike -s bbbike-c     || error "bbbike c files"
make -C./bbbike -s perlcheck    || error "perlcheck"

mkdir -p $(dirname ${bbbike_src})

tar cf - bbbike | $gzip > ${bbbike_src}.new
mv -f ${bbbike_src}.new ${bbbike_src}
$gzip -t ${bbbike_src}

rm -rf $dir

