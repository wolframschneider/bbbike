#!/bin/sh

set -e

dir=$(mktemp -d -t bbbike-bootstrap.XXXXXXXX)
cd $dir

exec 2> log.bbbike

if ! bbbike-checkout; then
    echo "checkout failed: $dir"
    cat log.bbbike
    exit 2
fi

cd bbbike

git merge eserte/master
make -s js perltidy 
make -s update-files 
git diff

pwd
echo "please run: $ rm -rf $dir"

