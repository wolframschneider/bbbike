#!/bin/sh

set -e

dir=$(mktemp -d -t bbbike-bootstrap.XXXXXXXX)
cd $dir

logfile=$(pwd)/log.bbbike
exec 2> $logfile

error () {
   message="$@"
   echo $message
   cat $logfile
   exit 2
}

bbbike-checkout || error "checkout failed: $dir"
cd bbbike

git merge eserte/master
make -s js perltidy 
make -s update-files 
git diff

pwd
echo "please run: $ rm -rf $dir"

