#!/bin/sh
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# bbbike-statistic - command line bbbike @ world statistic


PATH=$HOME/bin:$PATH; export PATH

cd /var/log/lighttpd || exit 2

: ${logfiles="bbbike.log"}
: ${logfiles_mobile="m.bbbike.log"}


echo -n "bbbike.org page views: "
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb]' | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "mobile bbbike.org page views: "
zcat -f $logfiles_mobile | zegrep -h 'GET /cgi/[A-Zb]' | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "weather page views: "
zcat -f $logfiles | zegrep -h 'GET /cgi/weather.cgi' | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "location page views: "
zcat -f $logfiles $logfiles_mobile | zegrep -h 'GET /cgi/location.cgi' | egrep '" 200 ' | awk '{print $1}' | wc -l

echo ""
echo -n "bbbike.org hosts: "
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb]' | egrep -v '" 40[34] ' | awk '{print $1}' | sort -u | wc -l
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb]' | egrep -v '" 40[34] ' |  
	egrep -v 'Purebot|Java/1|SnapPreviewBot|Tcl http client package' |
	awk '{print $1, $7 }' | perl -npe 's/\?.*//; s,/cgi/,,; s,(\.en)?\.cgi,,;' | 
	sort | uniq -c | sort -nr | head -20 | dns

echo ""

echo ""
echo "bbbike references:"
zcat -f $logfiles | zegrep -h 'GET / |GET /cgi/[A-Za-z\.]+ HTTP' | egrep '" 200 ' |
	egrep -v 'Purebot|Java/1|SnapPreviewBot|Tcl http client package' |
	awk '{print $11}' | perl -npe 's,(http://www.bbbike.org/cgi/\S+)\?.*,$1,g' | sort | uniq -c | sort -nr

echo ""
echo -n "bbbike cities: "
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb].*?\?' | egrep -v '" 40[34] ' |
	egrep -v 'imagetype=png.*geometry=240x180' |
	perl -ne 'print "$1\n" if m,GET /cgi/(.*?).cgi,'| wc -l

zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb].*?\?' | egrep -v '" 40[34] ' |
	egrep -v 'imagetype=png.*geometry=240x180' |
	perl -ne 'print "$1\n" if m,GET /cgi/(.*?).cgi,'|
	sort | uniq -c | sort -nr


echo ""
echo -n "OpenSearch requests: "
zcat -f $logfiles | zegrep -h 'GET /cgi/api.*?\?' | egrep -v '" 40[34] ' | wc -l

echo "OpenSearch requests per city: "
zcat -f $logfiles | zegrep -h 'GET /cgi/api.*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if /city=([^&\s]+)/' | sort | uniq -c | sort -nr

echo ""
echo -n "street requests: "
zcat -f $logfiles | zegrep -h 'GET /cgi/street-coord.cgi\?' | egrep -v '" 40[34] ' | wc -l


echo ""
echo -n "bbbike cities pdf: "
zcat -f $logfiles | zegrep -h 'POST /cgi/[A-Zb].*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if m,POST /cgi/(.*?).cgi,' | wc -l
zcat -f $logfiles | zegrep -h 'POST /cgi/[A-Zb].*?' | egrep -v '" 40[34] ' | 
	perl -ne 'print "$1\n" if m,POST /cgi/(.*?).cgi,'|
	sort | uniq -c | sort -nr

echo ""
echo -n "output formats total: "
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb].*?\?' | egrep -v '" 40[34] ' | 
	perl -ne 'print "$1 $2\n" if m,GET /cgi/(\S+)\?\S*output_as=([^;&\s]+),' | wc -l
echo "output formats: "
zcat -f $logfiles | zegrep -h 'GET /cgi/[A-Zb].*?\?' | egrep -v '" 40[34] ' |
	perl -ne 'print "$1 $2\n" if m,GET /cgi/(\S+)\?\S*output_as=([^;&\s]+),' | sort | uniq -c | sort -nr

echo ""
echo -n "slippymap cities: "
zcat -f $logfiles | zegrep -h 'POST /cgi/slippymap.*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if m,city=(.*?)[&;],' | wc -l
zcat -f $logfiles | zegrep -h 'POST /cgi/slippymap.*?\?' | egrep -v '" 40[34] ' |
	perl -ne 'print "$1\n" if m,city=(.*?)[&;\s],' | sort | uniq -c | sort -nr
