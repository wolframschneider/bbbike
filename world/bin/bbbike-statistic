#!/bin/sh
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# bbbike-statistic - command line bbbike @ world statistic


PATH=$HOME/bin:$PATH; export PATH

cd /var/log/lighttpd || exit 2

: ${logfiles="bbbike.log"}
: ${logfiles_mobile="m.bbbike.log"}

url_match='(/cgi/[A-Zb]|/[A-Z][a-z][A-Za-z]+/|/berlin/|/[a-z][a-z]/[A-Z][a-z][A-Za-z]+/)'

echo -n "bbbike.org page views: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match" | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "mobile bbbike.org page views: "
zcat -f $logfiles_mobile | egrep -v 85.214.61.222| egrep "GET $url_match" | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "weather page views: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep 'GET /cgi/weather.cgi' | egrep -v '" 40[34] ' | awk '{print $1}' | wc -l

echo -n "location page views: "
zcat -f $logfiles $logfiles_mobile | egrep -v 85.214.61.222 | egrep 'GET /cgi/location.cgi' | egrep '" (200|301) ' | awk '{print $1}' | wc -l

echo ""
echo -n "bbbike.org hosts: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match" | egrep -v '" 40[34] ' | awk '{print $1}' | sort -u | wc -l
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match" | egrep -v '" 40[34] ' |  
	egrep -v 'Purebot|Java/1|SnapPreviewBot|Tcl http client package|Yahoo\! Slurp|www.bing.com/bingbot.htm|crawler.html|Googlebot|ezooms.bot|covario|Ronbot/Nutch|cmsworldmap.com' |
	awk '{print $1, $7 }' | perl -npe 's/\?.*//; s,/cgi/,,; s,(\.en)?\.cgi,,;' | 
	sort | uniq -c | sort -nr | head -40 | dns

echo ""

echo ""
echo -n "bbbike references: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET / |GET $url_match.* HTTP" | egrep '" (200|301) ' |
	egrep -v 'GET /[^ ]+/streets.html' |
	egrep -v 'Purebot|Java/1|SnapPreviewBot|Tcl http client package|http://www.bbbike.org' |
	awk '{print $11}' | perl -npe "s,.?http://www.bbbike.org$url_match\?.*\n,$1,g" | sort -u | wc -l

echo -n "google references: "
zcat -f $logfiles | egrep "GET / |GET $url_match.* HTTP" | egrep '" (200|301) ' |
	egrep -v 'GET /[^ ]+/streets.html' | egrep -i 'google.*fahrrad' | wc -l

zcat -f $logfiles | egrep "GET / |GET $url_match.* HTTP" | egrep '" (200|301) ' |
	egrep -v 'GET /[^ ]+/streets.html' | egrep -iv 'google.*fahrrad' |
	egrep -v 'Purebot|Java/1|SnapPreviewBot|Tcl http client package|http://www.bbbike.org' |
	awk '{print $11}' | perl -npe "s,.?http://www.bbbike.org$url_match\?.*\n,$1,g" | 
	sort | uniq -c | sort -nr |
	perl -MCGI -npe '$_ = CGI::unescape($_)'

echo ""
echo -n "bbbike cities: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' |
	egrep -v 'imagetype=png.*geometry=240x180' |  
	perl -ne 'print "$1\n" if m,GET /cgi/(.*?).cgi, || m,GET /([A-Z][a-z]+)/\?, || m,GET /([a-z][a-z]/[A-Z][a-z]+)/\?, ' | wc -l

zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' |
	egrep -v 'imagetype=png.*geometry=240x180' |
	perl -ne 'print "$1\n" if m,GET /cgi/(.*?).cgi, || m,GET /([A-Z][a-z]+)/\?, || m,GET /([a-z][a-z]/[A-Z][a-z]+)/\?,' |
	sort | uniq -c | sort -nr


echo ""
echo -n "OpenSearch requests: "
zcat -f $logfiles | egrep 'GET /cgi/api.*?\?' | egrep -v '" 40[34] ' | wc -l

echo "OpenSearch requests per city: "
zcat -f $logfiles | egrep 'GET /cgi/api.*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if /city=([^&\s]+)/' | sort | uniq -c | sort -nr

echo ""
echo -n "street requests: "
zcat -f $logfiles | egrep 'GET /cgi/street-coord.cgi\?' | egrep -v '" 40[34] ' | wc -l


echo ""
echo -n "bbbike cities pdf: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep 'POST (/[a-z][a-z])?/[A-Z][a-z]+.*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if m,POST /[A-Z][a-z]+/(.*?), || m,POST /[a-z][a-z]/[A-Z][a-z]+/(.*?),' | wc -l

zcat -f $logfiles | egrep -v 85.214.61.222 | egrep 'POST (/[a-z][a-z])?/[A-Z][a-z]+/.*?\?' | egrep -v '" 40[34] ' | 
	perl -ne 'print "$1\n" if m,POST /([A-Z][a-z]+)/, || m,POST /([a-z][a-z]/[A-Z][a-z]+)/,'|
	sort | uniq -c | sort -nr

echo ""
echo -n "output formats total: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' | 
	perl -ne 'print "$1 $2\n" if m,GET /(.*?[A-Z][^/]+)/.*?\?\S*output_as=([^;&\s]+),' | wc -l
echo "output formats: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' |
	perl -ne 'print "$1 $2\n" if m,GET /(.*?[A-Z][^/]+)/.*?\?\S*output_as=([^;&\s]+),' | sort | uniq -c | sort -nr

echo ""
echo -n "slippymap cities: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' | egrep 'startc=\w+.*zielc=\w+' | egrep -v 'cache=1' |
	perl -ne 'print "$1\n" if m,GET /([A-Z][a-z]+)/\?, || m,GET /([a-z][a-z]/[A-Z][a-z]+)/\?,' | wc -l
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep "GET $url_match.*?\?" | egrep -v '" 40[34] ' |
	egrep 'startc=\w+.*zielc=\w+' | egrep -v 'cache=1' |
	perl -ne 'print "$1\n" if m,GET /([A-Z][a-z]+)/\?, || m,GET /([a-z][a-z]/[A-Z][a-z]+)/\?,' |
	sort | uniq -c | sort -nr

echo ""
echo -n "slippymap cities IE6/7: "
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep 'POST /cgi/slippymap.*?\?' | egrep -v '" 40[34] ' | perl -ne 'print "$1\n" if m,city=(.*?)[&;],' | wc -l
zcat -f $logfiles | egrep -v 85.214.61.222 | egrep 'POST /cgi/slippymap.*?\?' | egrep -v '" 40[34] ' |
	perl -ne 'print "$1\n" if m,city=(.*?)[&;\s],' | sort | uniq -c | sort -nr

echo ""
echo -n "Gpsies.com: "
egrep '188.40.84.75' $logfiles | wc -l
egrep '188.40.84.75' $logfiles | awk '{ print $7 }' | sort -u

echo ""
echo "Street click"
echo -n "streets.html: "
egrep 'GET /[A-Z][^ ]*/streets.html' $logfiles | awk '{ if ($11 != "\"-\"") { print $7, $11 } else { print $11 } }'| sort  -u | wc -l
egrep 'GET /[A-Z][^ ]*/streets.html' $logfiles | awk '{ if ($11 != "\"-\"") { print $7 } }'| sort | uniq -c | sort -nr | head -20 

echo ""
echo -n "Street route search: "
awk '{if ($11 ~ /streets.html/ && $7 ~ /^\/[A-Z]/ && $7 ~ /start/ ) { print $7, $11}}' $logfiles | wc -l
awk '{if ($11 ~ /streets.html/ && $7 ~ /^\/[A-Z]/ && $7 ~ /start/ ) { print $7, $11}}' $logfiles | sort

echo ""
echo "blocked IP addresses"
egrep '" 403 ' $logfiles | awk '{ print $1 }'| sort | uniq -c | sort -nr | dns

echo ""
echo "bots?"
egrep 'GET /[a-z][a-z]/' $logfiles | egrep '" 200 ' | awk '{ print $1 }' | sort | uniq -c | sort -nr

echo ""
echo "Honey"
egrep '/honey' $logfiles | awk '{ print $1 }'| sort | uniq -c | sort -nr | dns

echo ""
echo "error 500"
egrep '" 500 ' $logfiles | awk '{ print $1 }'| sort | uniq -c | sort -nr | dns

