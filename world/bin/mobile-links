#!/usr/local/bin/perl
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# option -  create list of cities with links

use Getopt::Long;

use lib '.';
use lib './world/bin';
use BBBikeWorldDB;

use strict;
use warnings;

binmode \*STDIN, ":utf8";
binmode \*STDOUT, ":utf8";

my $debug            = 1;      # 0: quiet, 1: normal, 2: verbose
my $city_lang        = 'de';
my $split_city_names = 0;
my $local_names      = 0;

sub usage () {
    <<EOF;
usage: $0 [ options ] < population.csv

--debug=0..2    debug option
--lang=		de | en
--split-city-names=0|1
--local-names=0|1
EOF
}

GetOptions(
    "debug=i"            => \$debug,
    "lang=s"             => \$city_lang,
    "split-city-names=i" => \$split_city_names,
    "local-names=i"      => \$local_names,
) or die usage;

my $db = BBBikeWorldDB->new( 'database' => '/dev/stdin' );
my %hash;
my %class;

foreach my $city ( $db->list_cities ) {
    my $c = $db->city->{$city};

    my $name =
      $db->select_city_name( $c->{"city"}, ( $c->{"name"} || $c->{"city"} ),
        $city_lang );
    my $link = "/$city/";

    if ( $split_city_names && $name =~ m,^([^/]+)/([^/]+)$, ) {
        $hash{$name} = $link;
        $hash{"$2/$1"} = $link;

        $class{$name} = $city;
        $class{"$2/$1"} = $city;
    }
    else {
        $hash{$name}  = $link;
        $class{$name} = $city;
    }
}

foreach my $city ( sort keys %hash ) {

    #print qq[<option value="], $hash{$city}, qq[">$city</option>\n];
    print qq[<a class="C_], $class{$city}, qq[" href="], $hash{$city},
      qq[">$city</a>];
    print qq[<br />\n];
}

