#!/bin/sh
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# linux wrapper for (parallel) bzip2

#PATH=/bin:/usr/bin:/opt/local/bin; export PATH

if which pbzip2_disabled >/dev/null; then
	bzcat='pbzip2 -dc'
else
	bzcat='bzip2 -dc'
fi

if which buffer >/dev/null; then
	$bzcat "$@" | buffer -m 6400k
else
	$bzcat "$@"
fi

