#!/bin/bash
# Copyright (c) 2009-2015 Wolfram Schneider, http://bbbike.org
#
# planet-sub - convert a planet.osm to a smaller files for each continent
#

set -e
set -o pipefail # bash only

if [ -e $HOME/.bbbikerc ]; then 
    . $HOME/.bbbikerc
fi

: ${program="sub-planet"}
# program=sub-srtm

perl -npe 's/\n/\0/g' world/etc/$program/$program.sh | \
	nice -15 ionice -c 2 -n 6 time xargs -0 -n1 -P3 /bin/sh -c

