#!/usr/bin/perl
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# index-update - replace @{ file }@ with the contents of file

use strict;
use warnings;

my $tmp = shift || "tmp";

while (<>) {
    if (s,\@{\s*(.*?)\s*}@,,) {
        my $file = "$tmp/" . $1;
        system( "cat", $file );
    }
    print;
}

