#!/bin/sh
# Copyright (c) 2009-2011 Wolfram Schneider, http://bbbike.org
#
# test if all programs are installed
#

set -e

which pigz || which gzip 
which pbzip2 || which bzip2

commands="
buffer
curl
git
iconv
java
jsbeautifier
jsmin
make
osmosis
perltidy
python
rsync
time
wget
xargs
"

for c in $commands
do
	if which $c >/dev/null; then :
	else
	   echo "missing: $c"
	   error=1
	fi
done

exit $error

