#!/bin/sh
# Copyright (c) 2009-2010 Wolfram Schneider, http://bbbike.org
#
# planet-download - download the latest planet osm file
#

file=planet-latest.osm.bz2
date=$(date '+%g%m%d')
file=planet-$date.osm.bz2

for server1 in http://ftp5.gwdg.de/pub/misc/openstreetmap/planet.openstreetmap.org http://ftp.ecki-netz.de/osm http://ftp.heanet.ie/mirrors/openstreetmap.org http://download.bbbike.org/osm/planet http://planet.openstreetmap.org
do
  echo ""
  echo $server1/$file
  curl -sSf --head --location $server1/$file | egrep '^(Last-Modified|Content-Length):'
done
